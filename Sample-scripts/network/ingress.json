{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "wildfly",
        "labels": {
            "app": "wildfly"
        }
    },
    "spec": {
        "ports": [
            {
                "name": "8080-tcp",
                "protocol": "TCP",
                "port": 8080,
                "targetPort": 8080
            }
        ],
        "selector": {
            "app": "wildfly"
        },
        "type": "LoadBalancer",
        "sessionAffinity": "ClientIP"
    }
}
